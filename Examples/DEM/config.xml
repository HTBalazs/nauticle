<?xml version="1.0" encoding="UTF-8"?>
<simulation>
	<function_space>
		<workspace>
			<particle_system>
				<cell_size value="csize"/>
				<domain min="-1000|-1000" max="1000|1000"/>
				<grid>
					<gid value="0"/>
					<gpos value="-0.5|-0.5"/>
					<gsize value="0.4|0.8"/>
					<goffset value="0|0"/>
					<gip_dist value="dx|dx"/>
				</grid>
				<grid>
					<gid value="1"/>
					<gpos value="-0.55|-0.55"/>
					<gsize value="0.05|1.1"/>
					<goffset value="0|0"/>
					<gip_dist value="dx|dx"/>
				</grid>
				<grid>
					<gid value="1"/>
					<gpos value="-0.5|-0.55"/>
					<gsize value="1|0.05"/>
					<goffset value="0|0"/>
					<gip_dist value="dx|dx"/>
				</grid>
				<grid>
					<gid value="1"/>
					<gpos value="0.5|-0.55"/>
					<gsize value="0.05|1.1"/>
					<goffset value="0|0"/>
					<gip_dist value="dx|dx"/>
				</grid>
				<grid>
					<gid value="1"/>
					<gpos value="-0.5|0.5"/>
					<gsize value="1|0.05"/>
					<goffset value="0|0"/>
					<gip_dist value="dx|dx"/>
				</grid>
			</particle_system>
			<fields>
				<a value="0|0"/>
				<v value="0|0"/>
			</fields>
			<constants>
				<csize value="0.05"/>
				<dx value="csize/2.1"/>
				<mass value="0.01"/>
				<radius value="0.012"/>
				<dt value="0.002"/>
				<spring value="10000000"/>
				<damping value="200"/>
				<shear value="10000"/>
				<g value="0|-9.81"/>
			</constants>
			<variables>
				<T value="0"/>
			</variables>
		</workspace>
	    <functions>
	    	<time value="T=T+dt"/>
	    	<acc value="a=if(gid,0*v,dem(v,radius,mass,spring,damping,shear)+g)"/>
	    	<vel value="v=v+int1(a,dt)"/>
	    	<pos value="r=r+int1(v,dt)"/>
	    </functions>
	</function_space>
	<parameter_space>
		<simulated_time value="2"/>
		<print_interval value="0.02"/>
		<confirm_on_exit value="0"/>
	</parameter_space>
</simulation>